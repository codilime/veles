#!/usr/bin/env python3

from veles.dis.isa.sparc import SparcIsa
from veles.dis.isa.falcon import FalconIsa
import sys

data = bytearray()
for x in sys.argv[1:]:
    data.append(int(x, 16))

from pprint import pprint
pos = 0
while pos < len(data):
    res = SparcIsa().parse(data, 'aaa', pos)
    pprint(res.__dict__)
    pos += res.len
